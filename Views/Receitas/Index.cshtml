@foreach (var item in Model)
{

    <div class="row mt-3">
        <div class="col-sm-8 card border-dark"> 
            <div class="card-body">
                <div class="card-title h1 border-bottom">
                    @Html.DisplayFor(modelItem => item.Titulo)
                </div>
                <div class="card-text">
                    @Html.DisplayFor(modelItem => item.Preparo)
                </div>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info mr-1">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success mr-1">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mr-1">Deletar</a>
            </div>
        </div>
            
    </div>

