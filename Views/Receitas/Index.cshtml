@model IEnumerable<ReceitasMvc.Models.Receita>

@{
    ViewData["Title"] = "Receitas";
}

<h1 class="display-3 text-uppercase">Lista de receitas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar nova receita</a>
</p>

<form asp-controller="Receitas" asp-action="Index" method="get">
    <p>
        Título: <input type="text" name="SearchString" />
        <input type="submit" value="Filtrar" />
    </p>

</form>


@*@Html.DisplayNameFor(model => model.Titulo)

